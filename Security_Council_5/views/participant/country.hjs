<!doctype html>
<html>
    <head>
        <title>{{name}} &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/country.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{user.name}}</li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/participant/simulation/{{simulation.id}}">Back to {{simulation.name}}</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main data-member="{{#userIsMember}}true{{/userIsMember}}">
            <h2>{{name}}</h2>
            {{#ambassador}}
            <p>Ambassador: {{name}}</p>
            <p>Ambassador Preference: {{currentUser.ambassadorPreference}}</p>
            {{/ambassador}}
            {{#userIsMember}}
            <form action="/participant/ambassador/{{simulation.id}}/{{countryId}}" method="post">
                <p>
                    <label>Select an ambassador:</label>
                    <select name="ambassador">
                        {{#members}}
                        <option value="{{id}}">{{name}}</option>
                        {{/members}}
                    </select>
                    <input type="submit" class="button" value="Vote Ambassador">
                </p>
            </form>
            {{/userIsMember}}
            <hr class="separator">
            <h2>Members of {{name}}</h2>
            <ul class="members">
                {{#members}}
                <li>{{name}}</li>
                {{/members}}
            </ul>
            {{#userIsMember}}
            <hr class="separator">
            <h2>Position paper</h2>
            <form action="/participant/submit/{{simulation.id}}/{{countryId}}" enctype="multipart/form-data" method="post">
                <textarea name="position-paper-summary" class="textbox" placeholder="Summarize the position you country will take">{{{positionPaperSummary}}}</textarea>
                {{#positionPaper}}
                <p><a href="/uploads/{{positionPaper}}">Download full position paper</a></p>
                {{/positionPaper}}
                <input type="file" name="position-paper">
                <input type="submit" class="button" value="Submit Position Paper">
            </form>
            <hr class="separator">
            <h2>Country directives</h2>
            <textarea name="directives" disabled="true" class="textbox">{{{directives}}}</textarea>
            {{/userIsMember}}
            {{^userIsMember}}
            {{#positionPaperVisible}}
            <hr class="separator">
            <h2>Position paper</h2>
            <textarea disabled="true" class="textbox">{{{positionPaper.summary}}}</textarea>
            {{#positionPaper}}
            <p><a href="/uploads/{{positionPaper.file}}">Download full position paper</a></p>
            {{/positionPaper}}
            {{/positionPaperVisible}}
            {{/userIsMember}}
            {{#userIsAmbassador}}
            <hr class="separator">
            <h2>Put Forward Motion</h2>
            <form action="/participant/submit/{{simulation.id}}/{{countryId}}/motion" method="post">
                <p><textarea name="motion" class="textbox"></textarea></p>
                <p><input type="submit" class="button" value="Put Forward"></p>
            </form>
            {{/userIsAmbassador}}
        </main>
    </body>
</html>
