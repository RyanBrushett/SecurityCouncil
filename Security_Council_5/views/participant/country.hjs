<!doctype html>
<html>
    <head>
        <title>{{name}} &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/simulation.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul class="navigation__items">
                    {{#user.pic}}
                    <li class="navigation__item"><img src="/images/{{user.pic}}" width="24px" height="24px"></li>
                    {{/user.pic}}
                    <li class="navigation__item">{{user.name}}</li>
                    {{#user.userFlag}}
                    <li class="navigation__item"><img src="/images/{{user.userFlag}}" width="24px" height="24px"></li>
                    {{/user.userFlag}}
                    <li class="navigation__item"><a href="/participant/simulation/{{simulation.id}}/{{userCountry.id}}/">{{name}}</a></li>
                    {{#isChair}}
                    <li class="navigation__item"><a href="/participant/chair/{{simulation.id}}">Chair</a></li>
                    {{/isChair}}
                </ul>
                <ul class="navigation__items">
                    <li class="navigation__item"><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <section class="infobar">
            <h2 class="simulation__name"><a href="/participant/simulation/{{simulation.id}}">{{simulation.name}}</a></h2>
            <p><span class="status">
                {{#simulation.resolution.inDebate}}
                Debating the resolution
                {{/simulation.resolution.inDebate}}
                {{^simulation.resolution.inDebate}}
                    {{#simulation.resolution.inVote}}
                    Voting on the resolution
                    {{/simulation.resolution.inVote}}
                    {{^simulation.resolution.inVote}}
                    {{/simulation.resolution.inVote}}
                    {{#simulation.motions}}
                        {{#inDebate}}
                        Debating motion {{{id}}}
                        {{/inDebate}}
                        {{#inVote}}
                        Voting on motion {{{id}}}
                        {{/inVote}}
                    {{/simulation.motions}}
                {{/simulation.resolution.inDebate}}
            </span></p>
        </section>
        <main class="main">
            <section class="section">
                {{#ambassador}}
                <p>Ambassador: {{name}}</p>
                {{/ambassador}}
                <form action="/participant/ambassador/{{simulation.id}}/{{countryId}}" method="post">
                    <p>
                        <label>Select an ambassador:</label>
                        <select name="ambassador">
                            {{#members}}
                            <option value="{{id}}">{{name}}</option>
                            {{/members}}
                        </select>
                        <input type="submit" class="button" value="Vote Ambassador">
                    </p>
                </form>
            </section>
            <section class="section">
                <h2>Members of {{name}}</h2>
                <ul class="members">
                    {{#members}}
                    <li>{{name}}  <em>(@{{username}})</em></li>
                    {{/members}}
                </ul>
            </section>
            <section class="section">
                {{#userIsAmbassador}}
                <h2>Put Forward Motion</h2>
                <form action="/participant/submit/{{simulation.id}}/{{countryId}}/motion" method="post">
                    <p><textarea name="motion" class="textbox"></textarea></p>
                    <p><input type="submit" class="button" value="Put Forward"></p>
                </form>
                {{/userIsAmbassador}}
                
                {{#userIsAmbassador}}
                    {{#positionPaper}}
                    <h2>Position paper</h2>
                    <textarea class="textbox">{{{positionPaper.summary}}}</textarea>
                    <p><a href="/uploads/{{positionPaper.file}}">Download full position paper</a></p>
                    <h2>Country directives</h2>
                    <textarea disabled="true" name="directives" class="textbox">{{{directives}}}</textarea>
                    {{/positionPaper}}
                    {{^positionPaper}}
                    <h2>Position paper</h2>
                    <textarea class="textbox"></textarea>
                    <h2>Country directives</h2>
                    <textarea disabled="true" name="directives" class="textbox">{{{directives}}}</textarea>
                    {{/positionPaper}}                
                {{/userIsAmbassador}}
                {{^userIsAmbassador}}
                    {{#positionPaper}}
                    <h2>Position paper</h2>
                    <textarea disabled="true" class="textbox">{{{positionPaper.summary}}}</textarea>
                    <p><a href="/uploads/{{positionPaper.file}}">Download full position paper</a></p>
                    <h2>Country directives</h2>
                    <textarea disabled="true" name="directives" class="textbox">{{{directives}}}</textarea>
                    {{/positionPaper}}
                    {{^positionPaper}}
                    <h2>Position paper</h2>
                    <textarea disabled="true" class="textbox"></textarea>
                    <h2>Country directives</h2>
                    <textarea disabled="true" name="directives" class="textbox">{{{directives}}}</textarea>
                    {{/positionPaper}}
                {{/userIsAmbassador}}                
                
            </section>
        </main>
    </body>
</html>
