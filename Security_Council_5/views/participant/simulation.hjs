<html>
    <head>
        <title>{{simulation.name}} &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/simulation.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{currentUser.name}}</li>
                    <li><a href="/">Dashboard</a></li>
                    {{#simulationJoined}}
                    <li><a href="/debate/{{simulation.id}}">Debate!</a></li>
                    {{/simulationJoined}}
                    {{#isChair}}
                    <li><a href="/participant/chair/{{simulation.id}}">Chair</a></li>
                    {{/isChair}}
                    {{^simulationJoined}}
                    <li><a href="/participant/join/simulation/{{simulation.id}}">Join this simulation!</a></li>
                    {{/simulationJoined}}
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>{{simulation.name}}</h2>
            {{#simulation.chairperson}}
            <p>Current Chair: {{name}}</p>
            {{/simulation.chairperson}}
            {{^simulation.chairperson}}
            <p>No chairperson has been selected yet. Ask your moderator to select a chairperson.</p>
            {{/simulation.chairperson}}
            {{#simulation.resolution}}
            <hr class="separator">
            <h2>{{title}}</h2>
            <p>{{{content}}}</p>
            {{/simulation.resolution}}
            <table class="countries">
                <tr>
                    <th>Country</th>
                    <th>Members</th>
                </tr>
                {{#simulation.countries}}
                <tr class="country">
                    <td class="country__name"><a href="/participant/simulation/{{simulation.id}}/{{id}}/">{{name}}</a></td>
                    <td>
                        <ul class="country__members">
                            {{#members}}
                            <li data-id="{{id}}" class="country__member">{{name}} (@{{username}})</li>
                            {{/members}}
                        </ul>
                    </td>
                </tr>
                {{/simulation.countries}}
            </table>
        </main>
    </body>
</html>
