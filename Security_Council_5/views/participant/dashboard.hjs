<!doctype html>
<html>
    <head>
        <title>Participant dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul class="navigation__items">
                    <li class="navigation__item">{{user.name}}</li>
                </ul>
                <ul class="navigation__items">
                    <li class="navigation__item"><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main class="main">
            <h2>Simulations you are a participant in</h2>
            {{#joinedSimulations}}
            <section class="simulation">
                <div class="simulation__bar">
                    <h3 class="simulation__title">
                        <a class="simulation__title__link" href="/participant/simulation/{{id}}">{{name}}</a>
                    </h3>
                    <p>{{resolution.title}}</p>
                    <p class="simulation__status"><a href="/debate/{{id}}">
                        {{#resolution.inDebate}}
                        Debating the resolution
                        {{/resolution.inDebate}}
                        {{^resolution.inDebate}}
                            {{#resolution.inVote}}
                            Voting on the resolution
                            {{/resolution.inVote}}
                            {{^resolution.inVote}}
                            {{/resolution.inVote}}
                            {{#motions}}
                                {{#inDebate}}
                                Debating motion {{{id}}}
                                {{/inDebate}}
                                {{#inVote}}
                                Voting on motion {{{id}}}
                                {{/inVote}}
                            {{/motions}}
                        {{/resolution.inDebate}}
                    </a></p>
                </div>
                <ul class="simulation__metadata">
                    {{#chairperson}}
                    <li>Chair: <strong>{{name}}</strong></li>
                    {{/chairperson}}
                    {{^chairperson}}
                    <li>No chairperson has been selected</li>
                    {{/chairperson}}
                </ul>
            </section>
            {{/joinedSimulations}}
            {{#user.chair}}
            <h2>Simulations you are a chairing</h2>
            {{/user.chair}}
            {{^user.chair}}
            <h2>Simulations you are not a participant in</h2>
            {{/user.chair}}
            {{#notJoinedSimulations}}
            <section class="simulation">
                <div class="simulation__bar">
                    <h3 class="simulation__title">
                        <a class="simulation__title__link" href="/participant/simulation/{{id}}">{{name}}</a>
                    </h3>
                    <p>{{resolution.title}}</p>
                    <p class="simulation__status"><a href="/debate/{{id}}"><a href="/debate/{{id}}">
                        {{#resolution.inDebate}}
                        Debating the resolution
                        {{/resolution.inDebate}}
                        {{^resolution.inDebate}}
                            {{#resolution.inVote}}
                            Voting on the resolution
                            {{/resolution.inVote}}
                            {{^resolution.inVote}}
                            {{/resolution.inVote}}
                            {{#motions}}
                                {{#inDebate}}
                                Debating motion {{{id}}}
                                {{/inDebate}}
                                {{#inVote}}
                                Voting on motion {{{id}}}
                                {{/inVote}}
                            {{/motions}}
                        {{/resolution.inDebate}}
                    </a></p>
                </div>
                <ul class="simulation__metadata">
                    {{#chairperson}}
                    <li>Chair: <strong>{{name}}</strong></li>
                    {{/chairperson}}
                    {{^chairperson}}
                    <li>No chairperson has been selected</li>
                    {{/chairperson}}
                </ul>
            </section>
            {{/notJoinedSimulations}}
        </main>
    </body>
</html>
