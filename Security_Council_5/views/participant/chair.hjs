<!doctype html>
<html>
    <head>
        <title>Chair Agenda &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
        <script type="text/javascript" src="/js/ajax.js"></script>
        <script type="text/javascript" src="/js/participant/chair.js"></script>
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{username}}</li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>{{getName}} &middot; Council</h2>
            {{#isChair}}
                {{#getResolution}}
                <div>
                    <h3>{{getTitle}}</h3>
                    {{#isInDebate}}
                    In Debate
                    {{/isInDebate}}
                    {{^isInDebate}}
                    <button type="button" class="button" onclick="debateResolution({{sid}}, {{userId}})">Debate</button>
                    {{/isInDebate}}
                    {{#canVoteResolution}}
                        {{#isInDebate}}
                        <button type="button" class="button" onclick"">Vote</button>
                        {{/isInDebate}}
                    {{/canVoteResolution}}
                </div>
                <br />
                {{/getResolution}}
                {{#getMotions}}
                <div>
                    <div>
                        <!-- this should be changed so that it doesn't look ridiculous -->       
                        {{#isInDebate}}
                        In Debate
                        {{/isInDebate}}
                        {{^isInDebate}} 
                        <button type="button" class="button" onclick="debateMotion({{sid}}, {{userId}}, {{getId}})">Debate</button>
                        {{/isInDebate}}
                        
                        {{#isInVote}}
                        In Vote
                        {{/isInVote}}
                        {{^isInVote}}
                            {{#isInDebate}}
                            <button type="button" class="button" onclick="voteMotion({{sid}}, {{userId}}, {{getId}})">Vote</button>
                            {{/isInDebate}}
                        {{/isInVote}}
                        
                        <button type="button" class="button">Trash</button>
                    </div>
                    <div>
                        {{#getMover}}
                        <p>Moved By: {{getName}}</p>
                        {{/getMover}}
                        <p>{{getBody}}</p>
                    </div>
                </div>
                {{/getMotions}} 
            {{/isChair}}
            {{^isChair}}
            Afraid not, friend.
            {{/isChair}}
        </main>
    </body>
</html>
