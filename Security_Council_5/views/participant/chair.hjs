<!doctype html>
<html>
    <head>
        <title>Participant dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
        <script type="text/javascript" src="js/participant/chair.js"></script>
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{ user.getName }}</li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            {{#isChair}}
                {{#motions}}
                <div>
                    <div> 
                        <button type="button" class="button" onClick="javascript:debateMotion( {{getId}} )">Debate</button>
                        <button type="button" class="button">Vote</button>
                        <button type="button" class="button">Trash</button>
                    </div>
                    <div>
                        {{#getMover}}
                        <p>Moved By: {{getName}}</p>
                        {{/getMover}}
                        <p>{{getBody}}</p>
                    </div>
                </div>
                {{/motions}} 
            {{/isChair}}
            {{^isChair}}
            Afraid not, friend.
            {{/isChair}}
        </main>
    </body>
</html>
