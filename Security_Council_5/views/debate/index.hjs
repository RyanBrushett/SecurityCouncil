<!doctype html>
<html>
    <head>
        <title>{{simulation.name}} Debate &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/debate.css">
        <link href='http://fonts.googleapis.com/css?family=Bitter:400,700,400italic|Montserrat:400,700|Raleway:200,800' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul class="navigation__items">
                    {{#currentUser.pic}}
                    <li><img src="/images/{{ currentUser.pic }}" width="24px", height="24px"></li>
                    {{/currentUser.pic}}
                    <li><a>{{ currentUser.name }}</a></li>
                    {{#currentUser.flag}}
                    <li><img src="/images/{{ currentUser.flag }}" width="24px", height="24px"></li>
                    {{/currentUser.flag}}
                    <li><a href="/participant/simulation/{{simulation.id}}/{{userCountry.id}}/">{{userCountry.name}}</a></li>
                </ul>
                <ul class="navigation__items logout">
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <section class="infobar">
            <a id="simulation-name" href="/participant/simulation/{{simulation.id}}">{{simulation.name}}</a>
            <p><span class="status"><a href="/debate/{{simulation.id}}">
                {{#debateReso}}
                Debating the resolution
                {{/debateReso}}
                {{^debateReso}}
                {{#voteReso}}
                Voting on the resolution
                {{/voteReso}}
                {{^voteReso}}
                {{/voteReso}}
                {{#simulation.motions}}
                {{#inDebate}}
                Debating motion {{{id}}}
                {{/inDebate}}
                {{#inVote}}
                Voting on motion {{{id}}}
                {{/inVote}}
                {{/simulation.motions}}
                {{/debateReso}}
            </span></p></a>
        </section>
        <main>
            <section class="channels">
            <div id="channel-list">
                <h3>Channels</h3>
                <ul class="menu">
                {{#simulation.communicationChannels}}
                    <li id="a-channel"><a href="/debate/{{simulation.id}}/{{id}}">{{label}}</a></li>
                {{/simulation.communicationChannels}}
                </ul>
            </div>
                <a href="#modal" id="create-new-channel">Create new channel</a>
            </section>
        <section class="debate">
                {{#permissions.votingMotion}}
                {{#permissions.motionToVote}}
                    {{#permissions.hasNotVoted}}
                        {{#permissions.userCanVote}}
                        <form action="/debate/vote/{{simulation.id}}/{{id}}" method="post">
                            <input type="radio" name="vote" value="yay" checked>Yay</input>
                            <input type="radio" name="vote" value="nay">Nay</input>
                            <input type="radio" name="vote" value="absent">Not Present</input>
                            <input type="submit" value="Vote!" class="button" />
                        </form>
                        {{/permissions.userCanVote}}
                        {{^permissions.userCanVote}}
                        There is a motion up for voting.<br />
                        {{getBody}}
                        {{/permissions.userCanVote}}
                    {{/permissions.hasNotVoted}}
                    {{^permissions.hasNotVoted}}
                        You have already voted on this motion.
                    {{/permissions.hasNotVoted}}
                {{/permissions.motionToVote}}
                {{/permissions.votingMotion}}
                {{#permissions.votingResolution}}
                    {{#permissions.hasNotVoted}}
                        {{#permissions.userCanVote}}
                        <form action="/debate/vote/{{simulation.id}}" method="post">
                            <input type="radio" name="vote" value="yay" checked>Yay</input>
                            <input type="radio" name="vote" value="nay">Nay</input>
                            <input type="radio" name="vote" value="absent">Not Present</input>
                            <input type="submit" value="Vote!" class="button" />
                        </form>
                        {{/permissions.userCanVote}}
                        {{^permissions.userCanVote}}
                        The resolution is up for voting.<br>
                        {{body}}
                        {{/permissions.userCanVote}}
                    {{/permissions.hasNotVoted}}
                    {{^permissions.hasNotVoted}}
                        You have already voted on this resolution.
                    {{/permissions.hasNotVoted}}
                {{/permissions.votingResolution}}
                {{^permissions.voting}}
                    {{#userCanComment}}
                    <form action="/debate/comment/{{simulation.id}}/{{channel.id}}" method="post">
                        <textarea name="comment" class="textbox" placeholder="Add something"></textarea>
                        <input type="submit" value="Comment" class="button">
                    </form>
                    {{/userCanComment}}
                    {{^userCanComment}}
                    You do not have permission to write on this channel.
                    {{/userCanComment}}
                {{/permissions.voting}}
                {{#userCanRead}}
                    {{#channel.comments}}
                    <blockquote class="card">
                        <p>{{{content}}}</p>
                        <footer class="card-info">
                            {{#user}}
                            {{#isChair}}
                            <p class="card-info__name--chair">{{name}}</p>
                            <p class="card-info__name--chair">Council Chair</p>
                            <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                            {{/isChair}}
                            {{^isChair}}
                            <p>{{name}}</p>
                            <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                            {{/isChair}}
                            {{/user}}
                        </footer>
                    </blockquote>
                    {{/channel.comments}}
                {{/userCanRead}}
                {{^userCanRead}}
                <blockquote class="card">
                    <p>You do not have permission to read this channel.</p>
                </blockquote>
                {{/userCanRead}}
        </section>
        <section class="resolution">
            {{#simulation.resolution}}
            <h3>{{title}}</h3>
            <p class="resolution-content">{{content}}</p>
            {{/simulation.resolution}}
        </section>
        <div id="modal">
            <input type="text" class="textbox-small" placeholder="New channel name">
            {{#simulation.countries}}
                <h4><input type="checkbox" name="{{id}}" value="{{name}}">    {{name}}</h4>
                {{#members}}
                <p class="channel-user-option">{{username}}    <input type="checkbox" name="id" value="{{name}}"></p>
                {{/members}}
            {{/simulation.countries}}
            <a href="/debate/{{simulation.id}}/{{channel.id}}" id="create-new-channel">Confirm</a>
            <a href="/debate/{{simulation.id}}/{{channel.id}}" id="create-new-channel">Cancel</a>
        </div>
        </main>
    </body>
</html>
