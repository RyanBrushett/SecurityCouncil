<!doctype html>
<html>
    <head>
        <title>{{simulation.name}} Debate &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/debate.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{currentUser.name}}</li>
                    {{#currentUser.flag}}
                    <li><img src="/images/{{currentUser.flag}}" width="32px", height="32px"></li>
                    {{/currentUser.flag}}
                    <li><a href="/">Dashboard</a></li>
                </ul>
            </nav>
        </header>
        <main class="content">
            {{#simulation.resolution}}
            <section class="sidebar">
                <h2>{{title}}</h2>
                <div class="sidebar__content">{{{content}}}</div>
            </section>
            {{/simulation.resolution}}
            <section class="sidebar">
                <h2>Channels</h2>
                <nav class="sidebar__content">
                    <ul class="conversations">
                        <li><a>All members (entire cacus)</a></li>
                        <li><a>Nigeria</a></li>
                        <li><a>Russia, Chad</a></li>
                    </ul>
                </nav>
            </section>
            <section class="section">
                <h2>Debate</h2>
                <div class="discussion">
                    {{#simulation.votingMotion}}
                    {{#simulation.motionToVote}}
                        {{#hasNotVoted}}
                            {{#userCanVote}}
                            <form action="/debate/vote/{{simulation.id}}/{{id}}" method="post">
                                <input type="radio" name="vote" value="yay" checked>Yay</input>
                                <input type="radio" name="vote" value="nay">Nay</input>
                                <input type="radio" name="vote" value="absent">Not Present</input>
                                <input type="submit" value="Vote!" class="button" />
                            </form>
                            {{/userCanVote}}
                            {{^userCanVote}}
                            There is a motion up for voting.<br />
                            {{getBody}}
                            {{/userCanVote}}
                        {{/hasNotVoted}}
                        {{^hasNotVoted}}
                            You have already voted on this motion.
                        {{/hasNotVoted}}
                    {{/simulation.motionToVote}}
                    {{/simulation.votingMotion}}
                    {{#simulation.votingResolution}}
                        {{#hasNotVoted}}
                            {{#userCanVote}}
                            <form action="/debate/vote/{{simulation.id}}" method="post">
                                <input type="radio" name="vote" value="yay" checked>Yay</input>
                                <input type="radio" name="vote" value="nay">Nay</input>
                                <input type="radio" name="vote" value="absent">Not Present</input>
                                <input type="submit" value="Vote!" class="button" />
                            </form>
                            {{/userCanVote}}
                            {{^userCanVote}}
                            The resolution is up for voting.<br>
                            {{body}}
                            {{/userCanVote}}
                        {{/hasNotVoted}}
                        {{^hasNotVoted}}
                            You have already voted on this resolution.
                        {{/hasNotVoted}}
                    {{/simulation.votingResolution}}
                    {{^simulation.voting}}
                    <form action="/debate/{{simulation.id}}" method="post">
                        <textarea name="comment" class="textbox" placeholder="Add something"></textarea>
                        <input type="submit" value="Comment" class="button">
                    </form>
                    {{/simulation.voting}}
                    {{#simulation.comments}}
                    <blockquote class="card">
                        <p>{{{content}}}</p>
                        <footer class="card-info">
                            {{#user}}
                            {{#isChair}}
                            <p class="card-info__name--chair">{{name}}</p>
                            <p class="card-info__name--chair">Council Chair</p>
                            <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                            {{/isChair}}
                            {{^isChair}}
                            <p>{{name}}</p>
                            <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                            {{/isChair}}
                            {{/user}}
                        </footer>
                    </blockquote>
                    {{/simulation.comments}}
                </div>
            </section>
        </main>
    </body>
</html>
