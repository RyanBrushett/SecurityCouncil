<!doctype html>
<html>
    <head>
        <title>{{simulation.name}} Debate &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/debate.css">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/new.css">
        <link href='http://fonts.googleapis.com/css?family=Bitter:400,700,400italic|Montserrat:400,700|Raleway:200,800' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul class="navigation__items">
                    {{#currentUser.pic}}
                    <li><img src="/images/{{ currentUser.pic }}" width="24px", height="24px"></li>
                    {{/currentUser.pic}}
                    <li><a>{{ currentUser.name }}</a></li>
                    {{#currentUser.flag}}
                    <li><img src="/images/{{ currentUser.flag }}" width="24px", height="24px"></li>
                    {{/currentUser.flag}}
                    {{getCountries}}
                    <li><a href="/participant/simulation/{{sid}}/{{getId}}/{{getName}}">Country</a></li>
                    <li><a href="/participant/simulation/{{simulation.id}}">Back to {{simulation.name}}</a></li>
                </ul>
                <ul class="navigation__items logout">
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <section class="infobar">
            <p class="active" id="simulation-name">{{simulation.name}}</p>
            <p><span class="status">Debating: Motion 6</span></p>
        </section>
        <main>
        <section class="channels">
            <h3>Channels</h3>
            <ul class="menu">
            {{#simulation.channels}}
                <li>{{label}}</li>
            {{/simulation.channels}}
            </ul>
        </section>
        <section class="debate">
            <div class="discussion">
                {{#permissions.votingMotion}}
                {{#permissions.motionToVote}}
                    {{#permissions.hasNotVoted}}
                        {{#permissions.userCanVote}}
                        <form action="/debate/vote/{{simulation.id}}/{{id}}" method="post">
                            <input type="radio" name="vote" value="yay" checked>Yay</input>
                            <input type="radio" name="vote" value="nay">Nay</input>
                            <input type="radio" name="vote" value="absent">Not Present</input>
                            <input type="submit" value="Vote!" class="button" />
                        </form>
                        {{/permissions.userCanVote}}
                        {{^permissions.userCanVote}}
                        There is a motion up for voting.<br />
                        {{getBody}}
                        {{/permissions.userCanVote}}
                    {{/permissions.hasNotVoted}}
                    {{^permissions.hasNotVoted}}
                        You have already voted on this motion.
                    {{/permissions.hasNotVoted}}
                {{/permissions.motionToVote}}
                {{/permissions.votingMotion}}
                {{#permissions.votingResolution}}
                    {{#permissions.hasNotVoted}}
                        {{#permissions.userCanVote}}
                        <form action="/debate/vote/{{simulation.id}}" method="post">
                            <input type="radio" name="vote" value="yay" checked>Yay</input>
                            <input type="radio" name="vote" value="nay">Nay</input>
                            <input type="radio" name="vote" value="absent">Not Present</input>
                            <input type="submit" value="Vote!" class="button" />
                        </form>
                        {{/permissions.userCanVote}}
                        {{^permissions.userCanVote}}
                        The resolution is up for voting.<br>
                        {{body}}
                        {{/permissions.userCanVote}}
                    {{/permissions.hasNotVoted}}
                    {{^permissions.hasNotVoted}}
                        You have already voted on this resolution.
                    {{/permissions.hasNotVoted}}
                {{/permissions.votingResolution}}
                {{^permissions.voting}}
                <form action="/debate/{{simulation.id}}" method="post">
                    <textarea name="comment" class="textbox" placeholder="Add something"></textarea>
                    <input type="submit" value="Comment" class="button">
                </form>
                {{/permissions.voting}}
                {{#simulation.comments}}
                <blockquote class="card">
                    <p>{{{content}}}</p>
                    <footer class="card-info">
                        {{#user}}
                        {{#isChair}}
                        <p class="card-info__name--chair">{{name}}</p>
                        <p class="card-info__name--chair">Council Chair</p>
                        <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                        {{/isChair}}
                        {{^isChair}}
                        <p>{{name}}</p>
                        <img class="card-info__flag" src="/images/{{flag}}" alt="Country Flag">
                        {{/isChair}}
                        {{/user}}
                    </footer>
                </blockquote>
                {{/simulation.comments}}
            </div>
        </section>
        <section class="content">
            {{#simulation.resolution}}
            <h3>{{title}}</h3>
            <p>{{{content}}}</p>
            {{/simulation.resolution}}
        </section>
        </main>
    </body>
</html>
