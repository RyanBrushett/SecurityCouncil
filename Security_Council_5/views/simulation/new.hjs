<!doctype html>
<html>
    <head>
        <title>Create a new simulation &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/new.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <form action="/simulation/new" method="post">
                <p>
                    <input type="text" name="name" placeholder="Simulation name">
                </p>
                <p>
                    <input type="text" name="resolution-title" placeholder="The title of the resolution">
                    <textarea name="resolution">Sample resolution. Replace this with your resolution.</textarea>
                </p>
                <p>Choose a sort method:</p>
                <p>
                    <input type="radio" id="random-sort" name="sort" value="random" checked>
                    <label for="randomteam">Randomly Assigned</label>
                    <input type="radio" id="manual-sort" name="sort" value="manual">
                    <label for="manualteam">Manually Assign</label>
                </p>
                <p>
                    <input type="submit" value="Create new simulation" clas="button">
                </p>
            </form>
        </main>
    </body>
</html>
