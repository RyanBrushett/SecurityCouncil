<!doctype html>
<html>
    <head>
        <title>{{ title }}</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
    </head>
    <body>
        <header>
            <h1><a href="/">United Nations Security Council</a></h1>
            <nav>
                <ul>
                    <li><a href="/sim">Simulations</a></li>
                    <li><a href="/sc-admin">Administrator view</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>{{ roomname }}</h2>
            <table>
                <tr>
                    <th>Council ID</th>
                    <th>Council Admin</th>
                    <th>Sort Method</th>
                    <th>Ongoing Chat</th>
                </tr>
                <tr>
                    <td>{{ id }}</td>
                    <td>{{ admin }}</td>
                    <td>{{ sort }}</td>
                    <td><a href="/sim/{{roomname}}/chatroom">Click to Join</a></td>
                </tr>
            </table>
        </main>
    </body>
</html>
