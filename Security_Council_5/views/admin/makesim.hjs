<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src='/js/adminFunctions.js'></script>
    <script src='/js/ajax.js'></script>
  </head>
  <body>
  <div id="adminwrap">
    <div id="adminhead">
      <h2><a href="/">S.C. SIM 9000</a></h2>
    </div>
    <div id="adminmain">
<!-- MAIN -->
      <div id="adminmaindisplay">
		<h3>Current Security Council Simulations</h3>
		{{{ roomlist }}}
      	<h3>Create A New Council</h3>
		<form role="form" action="/sc-admin/managesim" method="POST">
		  <div class="row">
		    <div>
		      <label>Council Name</label><br />
		      <input type="text" name="room" placeholder="Council Name" />
		    </div>
		  </div>
		  <div class="row">
		    <div>
		      <label>Admin Username</label><br />
		      <input type="text" name="admin" placeholder="admin login name" />
		    </div>
		  </div>
		  <br />
		  <div class="row">
		    <div>
		      <label>Team Sort</label>
		      <br />
		      <input type="radio" name="teamsort" value="Random" id="randomteam" checked><label for="randomteam">Randomly Assigned</label>
		      <input type="radio" name="teamsort" value="Manual" id="manualteam"><label for="manualteam">Manually Assign</label>
		    </div>
		  </div>
		  <br />
		  <button>Create Council</button>
		</form>
      </div>
<!-- END MAIN -->
      <div id="adminmainfooter">
      </div>
    </div>
    <div id="adminside">
      <ul id="simoptions" class="buttonlist">
      	<li id="adminhome" class="buttonitem"><a href="/sc-admin">Dashboard</a></li>
        <li id="option1" class="buttonitem" onclick="#"><a href="/sc-admin/manageusers">Manage Users</a></li>
        <li id="option2" class="buttonitem"><a href="/sc-admin/managesim">Create Council</a></li>
      </ul>
    </div>
  </div>
  </body>
</html>
