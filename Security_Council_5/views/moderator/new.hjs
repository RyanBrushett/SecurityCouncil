<!doctype html>
<html>
    <head>
        <title>Moderator dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{user.name}}, and&nbsp;<strong>you are a moderator</strong></li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/simulation/new">Create a new simulation</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>Create Moderator</h2>
            <form action="/moderator/create" method="post">
                <input type="text" name="name" placeholder="Full Name" />
                <input type="text" name="username" placeholder="Username" />
                <input type="password" name="password" placeholder="Password" />
                <input class="button" type="submit" value="Create Moderator">
            </form>    
        </main>
    </body>
</html>
