<!doctype html>
<html>
    <head>
        <title>{{ getName }} &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/simulation.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>Security Council &middot; {{ getName }}</h2>
            {{#getChairperson}}
            <p>Current Chair: {{getName}}</p>
            {{/getChairperson}}
            <form action="/moderator/simulation/chairperson/{{sid}}" method="post">
                <p>
                    <label>Select a chairperson:</label>
                    <select name="chairperson">
                        {{#getCountries}}
                        {{#getMembers}}
                        <option value="{{ getId }}">{{ getName }}</option>
                        {{/getMembers}}
                        {{/getCountries}}
                    </select>
                    <input type="submit" class="button" value="Set Chairperson">
                </p>
            </form>
            <form action="/moderator/simulation/visible-paper/{{sid}}" method="post">
                <p>
                    <label>Set the visibility of member's position paper:</label>
                    <select name="paperIsVisible">
                        <option value="hidden" {{^isPaperVisible}} selected="true" {{/isPaperVisible}}>Hidden</option>
                        <option value="visible" {{#isPaperVisible}} selected="true" {{/isPaperVisible}}>Visible</option>
                    </select>
                    <input type="submit" class="button" value="Set mode">
                    (Sets whether participants can view other nations' position papers.)
                </p>
            </form>
            <p>Number of participants: {{ getNumberOfParticipants }}</p>
            {{#getResolution}}
            <hr class="separator">
            <h2>{{getTitle}}</h2>
            <form action="/moderator/submit/{{sid}}" method="post">
                <textarea name="resolution" class="textbox">{{{ getContent }}}</textarea>
                <input type="submit" class="button" value="Set Resolution">
            </form>
            {{/getResolution}}
            <hr class="separator">
            <table class="countries">
                <tr>
                    <th>Country</th>
                    <th>Members</th>
                </tr>
                {{#getCountries}}
                <tr class="country">
                    <td class="country__name"><a href="/moderator/simulation/{{sid}}/{{getId}}/">{{getName}}</a></td>
                    <td>
                        <ul class="country__members">
                            {{#getMembers}}
                            <li data-id="{{ getId }}" class="country__member">{{ getName }}</li>
                            {{/getMembers}}
                        </ul>
                    </td>
                </tr>
                {{/getCountries}}
            </table>
        </main>
    </body>
</html>
