<!doctype html>
<html>
    <head>
        <title>{{simulation.name}} &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/simulation.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{user.name}}, and&nbsp;<strong>you are a moderator</strong></li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/debate/{{simulation.id}}">View the Debate</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>{{simulation.name}}</h2>
            {{#simulation.chairperson}}
            <p>Current Chair: {{name}}</p>
            {{/simulation.chairperson}}
            <form action="/moderator/simulation/chairperson/{{simulation.id}}" method="post">
                <p>
                    <label>Select a chairperson:</label>
                    <select name="chairperson">
                        {{#simulation.countries}}
                        {{#members}}
                        <option value="{{id}}">{{name}}</option>
                        {{/members}}
                        {{/simulation.countries}}
                    </select>
                    <input type="submit" class="button" value="Set Chairperson">
                </p>
            </form>
            <form action="/moderator/simulation/visible-paper/{{simulation.id}}" method="post">
                <p>
                    <label>Set the visibility of member's position paper:</label>
                    <select name="paperIsVisible">
                        <option value="hidden" {{^simulation.paperIsViewable}} selected="true" {{/simulation.paperIsViewable}}>Hidden</option>
                        <option value="visible" {{#simulation.paperIsViewable}} selected="true" {{/simulation.paperIsViewable}}>Visible</option>
                    </select>
                    <input type="submit" class="button" value="Set mode">
                    (Sets whether participants can view other nations' position papers.)
                </p>
            </form>
            {{#simulation.resolution}}
            <hr class="separator">
            <h2>{{title}}</h2>
            <form action="/moderator/submit/{{simulation.id}}" method="post">
                <textarea name="resolution" class="textbox">{{{content}}}</textarea>
                <input type="submit" class="button" value="Set Resolution">
            </form>
            {{/simulation.resolution}}
            <hr class="separator">
            <table class="countries">
                <tr>
                    <th>Country</th>
                    <th>Members</th>
                </tr>
                {{#simulation.countries}}
                <tr class="country">
                    <td class="country__name"><a href="/moderator/simulation/{{simulation.id}}/{{id}}/">{{name}}</a></td>
                    <td>
                        <ul class="country__members">
                            {{#members}}
                            <li data-id="{{id}}" class="country__member">{{name}} <em>(@{{username}})</em></li>
                            {{/members}}
                        </ul>
                    </td>
                </tr>
                {{/simulation.countries}}
            </table>
        </main>
    </body>
</html>
