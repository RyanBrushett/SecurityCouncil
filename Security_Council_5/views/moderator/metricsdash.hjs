<!doctype html>
<html>
    <head>
        <title>Moderator dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/metrics.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul class="navigation__items">
                    {{#user.pic}}
                    <li><img src="/images/{{ user.pic }}" width="24px", height="24px"></li>
                    {{/user.pic}}
                    <li><a>{{ user.name }}</a></li>
                    {{#user.flag}}
                    <li><img src="/images/{{ user.flag }}" width="24px", height="24px"></li>
                    {{/user.flag}}
                    <li><a href="/participant/simulation/{{simulation.id}}/{{userCountry.id}}/">{{userCountry.name}}</a></li>
                    <li><a href="/moderator/metrics/{{simulation.id}}">Reports</a></li>
                </ul>
                <ul class="navigation__items logout">
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <section class="infobar">
            <a id="simulation-name" href="/participant/simulation/{{simulation.id}}">{{simulation.name}}</a>
            <p><span class="status"><a href="/debate/{{simulation.id}}">
                {{#debateReso}}
                Debating the resolution
                {{/debateReso}}
                {{^debateReso}}
                    {{#voteReso}}
                    Voting on the resolution
                    {{/voteReso}}
                    {{^voteReso}}
                    {{/voteReso}}
                    {{#simulation.motions}}
                    {{#inDebate}}
                    Debating motion {{{id}}}
                    {{/inDebate}}
                    {{#inVote}}
                    Voting on motion {{{id}}}
                    {{/inVote}}
                    {{/simulation.motions}}
                {{/debateReso}}
            </span></p></a>
        </section>
        <main>
            <section class="metrics-options">
            <h3>Reports</h3>
            <a class="menu-option" href="#overview">Overview</a>
            <a class="menu-option" href="#user">Per-user</a>
            <a class="menu-option" href="#team">Per-team</a>
            <a class="menu-option" href="#motion">Motions</a>
            </section>
            <section class="metrics-view" id="overview">
            <table>
                <tr>
                    <td>Sim ID</td>
                    <td>{{simId}}</td>
                </tr>
                <tr>
                    <td>Sim Name</td>
                    <td>{{simName}}</td>
                </tr>
                <tr>
                    <td>Total Comments</td>
                    <td>{{totalComments}}</td>
                </tr>
                <tr>
                    <td>Total Teams</td>
                    <td>{{numTeams}}</td>
                </tr>
                <tr>
                    <td>Total Participants</td>
                    <td>{{numUsers}}</td>
                </tr>
                <tr>
                    <td>Total Motions Put Forward</td>
                    <td>{{numMotions}}</td>
                </tr>
            </table>
            </section>
            <section class="metrics-view" id="user">
            <table>
                <tr>
                    <td><h4>Username</h4></td>
                    <td><h4>Full Name</h4></td>
                    <td><h4>Team Name</h4></td>
                    <td><h4>Number of Comments</h4></td>
                </tr>
                {{#users}}
                <tr>
                    <td>{{username}}</td>
                    <td>{{name}}</td>
                    <td>{{teamname}}</td>
                    <td>{{numberOfComments}}</td>
                </tr>
                {{/users}}
            </table>
            </section>
            <section class="metrics-view" id="team">
            <table>
                <tr>
                    <td><h4>Team Name</h4></td>
                    <td><h4>Members</h4></td>
                    <td><h4>Comments Made</h4></td>
                    <td><h4>Motions</h4></td>
                    <td><h4>Motions Approved</h4></td>
                    <td><h4>Motions Denied</h4></td>
                    <td><h4>Motions Deleted</h4></td>
                </tr>
                {{#simulation.countries}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{members.length}}</td>
                    <td>{{comments}}</td>
                    <td>{{numMotions}}</td>
                    <td>{{motionsApproved}}</td>
                    <td>{{motionsDenied}}</td>
                    <td>{{motionsDeleted}}</td>
                </tr>
                {{/simulation.countries}}
            </table>
            </section>
            <section class="metrics-view" id="motion">
            <table>
                <tr>
                    <td>Approved</td>
                    <td>{{numapproved}}</td>
                </tr>
                <tr>
                    <td>Denied</td>
                    <td>{{numdenied}}</td>
                </tr>
                <tr>
                    <td>Deleted</td>
                    <td>{{numdeleted}}</td>
                </tr>
                <tr>
                    <td>In Vote Now</td>
                    <td>{{invote}}</td>
                </tr>
                <tr>
                    <td>In Debate Now</td>
                    <td>{{indebate}}</td>
                </tr>
                <tr>
                    <td>Total Motions Put Forward</td>
                    <td>{{totalMotions}}</td>
                </tr>
            </table>
            </section>
        </main>
    </body>
</html>
