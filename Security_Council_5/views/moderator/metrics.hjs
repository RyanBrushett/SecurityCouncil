<!doctype html>
<html>
    <head>
        <title>Moderator dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{user.name}}, and&nbsp;<strong>you are a moderator</strong></li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/simulation/new">Create a new simulation</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h3>Sim ID: {{simId}}</h3>
            <h3>Sim Name: {{simName}}</h3>
            <h3>Total Num of Comments: {{totalComments}}</h3>
            <h3>Total Num of Teams: {{numTeams}}</h3>
            <h3>Total Number of Participants: {{numUsers}}</h3>
            <h3>Comments Per User</h3>
            {{#users}}
            <ul>
                <li>{{username}}'s comments: <b>{{numberOfComments}}</b></li>
            </ul>
            {{/users}}
        </main>
    </body>
</html>
