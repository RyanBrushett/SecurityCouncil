<!doctype html>
<html>
    <head>
        <title>Moderator dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li>You are {{user.name}}, and&nbsp;<strong>you are a moderator</strong></li>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/simulation/new">Create a new simulation</a></li>
                </ul>
            </nav>
        </header>
        <main>
            {{#simulations}}
            <section class="simulation">
                <h3 class="simulation__title">
                    <a class="simulation__title__link" href="/moderator/simulation/{{id}}">{{name}}</a>
                </h3>
                <ul class="statistics">
                    {{#chairperson}}
                    <li>Chair: {{name}}</li>
                    {{/chairperson}}
                    {{^chairperson}}
                    <li>No chairperson has been selected</li>
                    {{/chairperson}}
                </ul>
            </section>
            {{/simulations}}
        </main>
    </body>
</html>
