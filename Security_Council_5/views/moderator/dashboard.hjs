<!doctype html>
<html>
    <head>
        <title>Moderator dashboard &middot; Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/dashboard.css">
    </head>
    <body>
        <header class="header">
            <h1><a href="/">Council</a></h1>
            <nav class="navigation">
                <ul>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/simulation/new">Create a new simulation</a></li>
                </ul>
            </nav>
        </header>
        <main>
            {{#simulations}}
            <section class="simulation">
                <h3 class="simulation__title">
                    <a class="simulation__title__link" href="/moderator/simulation/{{ getId }}">{{ getName }}</a>
                </h3>
                <ul class="statistics">
                    {{#getChairperson}}
                    <li>Chair: {{getName}}</li>
                    {{/getChairperson}}
                    {{^getChairperson}}
                    <li>No chairperson has been selected</li>
                    {{/getChairperson}}
                    <li>Number of participants: {{ getNumberOfParticipants }}</li>
                </ul>
                <!-- this should be somewhere else, probably. - Dan -->
                Approved motions: <br />
                {{#getMotions}}
                    {{#isApproved}}
                    {{getBody}}
                    {{/isApproved}}
                {{/getMotions}}
                Denied motions: <br />
                {{#getMotions}}
                    {{#isDenied}}
                    {{getBody}}
                    {{/isDenied}}
                {{/getMotions}}
            </section>
            {{/simulations}}
        </main>
    </body>
</html>
